<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.erick.hellowordprueba.MapaCanton">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context="com.example.erick.hellowordprueba.MapaCanton"
        tools:layout="@layout/app_bar_main" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fab_menu_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        fab:fab_icon="@drawable/ic_menu_share"
        fab:fab_addButtonColorNormal="@color/accent"
        fab:fab_addButtonColorPressed="@color/accent_dark"
        fab:fab_addButtonPlusIconColor="#FFF"
        fab:fab_addButtonStrokeVisible="true"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_labelsPosition="right"
        android:src="@drawable/ic_menu_share">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_button_filter_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/accent"
            fab:fab_colorPressed="@color/accent_dark"
            fab:fab_plusIconColor="#FFF"
            fab:fab_icon="@drawable/ic_layers"
            fab:fab_size="mini"
            fab:fab_title="Elegir Región" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_button_filter_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/accent"
            fab:fab_colorPressed="@color/accent_dark"
            fab:fab_plusIconColor="#FFF"
            fab:fab_icon="@drawable/ic_menu_share"
            fab:fab_size="mini"
            fab:fab_title="Elegir Categorías" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fab_menu_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        fab:fab_addButtonColorNormal="@color/accent"
        fab:fab_addButtonColorPressed="@color/accent_dark"
        fab:fab_addButtonIcon="@drawable/ic_layers"
        fab:fab_addButtonIconPressed="@drawable/ic_layers_extend"
        fab:fab_addButtonPlusIconColor="#FFF"
        fab:fab_addButtonStrokeVisible="false"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_labelsPosition="left"
        android:scrollbars="vertical">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_button_config_satelite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/accent"
            fab:fab_colorPressed="@color/accent_dark"
            fab:fab_plusIconColor="#FFF"
            fab:fab_icon="@drawable/ic_menu_camera"
            fab:fab_size="mini"
            fab:fab_title="Satélite" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_button_config_mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/accent"
            fab:fab_colorPressed="@color/accent_dark"
            fab:fab_plusIconColor="#FFF"
            fab:fab_icon="@drawable/ic_menu_share"
            fab:fab_size="mini"
            fab:fab_title="Mapa" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_button_config_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/accent"
            fab:fab_colorPressed="@color/accent_dark"
            fab:fab_plusIconColor="#FFF"
            fab:fab_icon="@drawable/ic_menu_share"
            fab:fab_size="mini"
            fab:fab_title="Trafico" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</FrameLayout>


